<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
    "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default">
        <action name="index" class="org.apache.struts.pac.action.RequestShowsAction" method="execute">
            <result name="success">showview.jsp</result>
            <result name="success_loggedin">adminshowview.jsp</result>
            <result name="error">showview.jsp</result>
            <result name="error_loggedin">adminshowview.jsp</result>
        </action>
        
        <action name="loginprocess" class="org.apache.struts.pac.action.Login">
            <result name="success">loginsuccess.jsp</result>
            <result name="error">login.jsp</result>
        </action>
        
        <action name="logout" class="org.apache.struts.pac.action.Login" method="logout">
        	<result name="success" >logoutsuccess.jsp</result>  
        </action>
        
        <action name="profile" class="org.apache.struts.pac.action.Profile">  
			<result name="success" >profilesuccess.jsp</result>  
			<result name="error">profileerror.jsp</result>  
		</action>
		
		<action name="addshow" class="org.apache.struts.pac.action.AddShowAction" method="execute">
			<result name="success">addshow.jsp</result>
			<result name="error">addshow.jsp</result>
			<result name="notloggedin">login.jsp</result>
		</action>
		
		<action name="editshow" class="org.apache.struts.pac.action.EditShowAction" method="execute">
			<result name="success">editshow.jsp</result>
			<result name="error">adminshowview.jsp</result>
			<result name="notloggedin">login.jsp</result>
		</action>
		
		<action name="finishshowedit" class="org.apache.struts.pac.action.EditShowAction" method="finishEdit">
			<result name="success">loggedInIndex.jsp</result>
			<result name="error">adminshowview.jsp</result>
			<result name="notloggedin">login.jsp</result>
		</action>
		
		<action name="removeshow" class="org.apache.struts.pac.action.RemoveShowAction" method="execute">
			<result name="success">adminshowview.jsp</result>
			<result name="error">adminshowview.jsp</result>
		</action>
    </package>

</struts>
